<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Contact</title>
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=PT+Sans&display=swap');

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;

}

body {
    font-family: 'Roboto', sans-serif;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    /* background: rgb(214,213,228);
    background: linear-gradient(90deg, rgba(214,213,228,1) 0%, rgba(145,183,215,0.7819502801120448) 75%); */
     background-color: #1f2833;

}

.container {
    height: 80%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: column;
}

.header {
    margin: 50px;
    /* color: rgb(31, 17, 107); */
    font-size: 30px;
    font-family: "PT Sans", sans-serif;
    color: #66fcf1;
}


#contact_form {
    width: 100%;
    height: 50vh;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: column;
}

.input {
    margin: 30px;
    width: 30vw;
    display: flex;
    justify-content: space-between;
    align-items: center;

}

.input label {
    font-size: 32px;
    color: #66fcf1;

}

.input input {
    border: none;
    font-size: 26px;
    padding: 10px 25px;
    border-radius: 7px;
}

.input input:focus {
    outline: none;
}

#submit-btn {
    display: flex;
    align-items: center;
    justify-content: center;
}
#submit-btn input{
    background-color: rgb(35, 168, 35);
    color: #fff;
    width: 100%;
    padding: 10px 20px;
    cursor: pointer;
}
#id {
    cursor: not-allowed;
    color: #fff;
    opacity: 0.6;
}

</style>
    
</head>

<body>
    <div class="container">
        <!-- Header File -->
        <div class="header">
            <h1>Update Contact Info</h1>
        </div>

        <!-- Update contact form -->

        <%for(let i of contact) {%>
        <form action="/updateContactForm/?id=<%= i.id%>" method="post" id="update">
         
            <div class="input">
                <label for="id">Contact id : </label>
                <input type="text" name="id" id="id" class="inputBox" value="<%= i.id %>" disabled required />
            </div>
            <div class="input">
                <label for="name">Name : </label>
                <input type="text" name="name" id="name" class="inputBox" value="<%= i.name %>" required />
            </div>

            <div class="input">
                <label for="name">Email : </label>
                <input type="email" name="email" id="name" class="inputBox" value="<%= i.email%>" required />
            </div>

            <div class="input">
                <label for="name">Phone : </label>
                <input type="tel" pattern="[0-9]{10}" name="phone" id="name" class="inputBox"
                    value="<%= i.phone%>" required />
            </div>
            <% } %>
            
            <!-- update Button -->
            <div class="input" id="submit-btn">
                <input type="submit" value="Update">
            </div>

        </form>
    </div>
</body>

</html>